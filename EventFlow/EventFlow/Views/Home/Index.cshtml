@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Add custom CSS for your page -->
    <style>
        body {
            background-color: #f3f3f3;
            font-family: Arial, sans-serif;
        }

        .cover-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .inner-cover {
            text-align: center;
        }

        .cover-heading {
            font-size: 3rem;
            font-weight: bold;
            color: #111;
        }

        .lead {
            font-size: 1.25rem;
            margin-top: 20px;
            color: #555;
        }

        .btn-register {
            background-color: #ff9900;
            color: #fff;
            padding: 10px 20px;
            font-size: 1.25rem;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            margin-right: 10px;
        }

        .btn-login {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            font-size: 1.25rem;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="pt-4">
        <main role="main" class="inner-cover">
            <h1 class="cover-heading">EventFlow</h1>
            <p class="lead">
                EventFlow is a task management system designed to help users include and handle upcoming appointments, events, assignment due dates, and tasks to be completed.
            </p>
            <p class="lead">
                Login to get started!
            </p>
            <p class="lead">
                <a href="#" class="btn-register">Register</a>
                <a href="#" class="btn-login">Login</a>
            </p>
        </main>
    </div>
</body>
</html>
