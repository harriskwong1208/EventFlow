@model Upcoming

<head>


    <style>
        #Add-btn {
            height: 30px;
            font-size: smaller;
            margin: 0px;
            padding: 0px;
            padding-left: 2px;
            padding-right: 2px;
        }

        .Items {
            display: flex;
            justify-content: space-between;
            margin-top: 1%;
        }
    </style>
</head>
<body class="bg-light">
    <main role="main" class="container">

        <div class="my-3 p-3 bg-white rounded box-shadow">
            <div class="d-flex justify-content-between">
                <div>
                    <h6 class="border-bottom border-gray pb-2 mb-0">Are you sure you want to delete this event:</h6>
                </div>
                <a asp-controller="Upcoming" asp-action="Index">
                    <button id="Add-btn" type="button" class="btn btn-info btn-xs">Back</button>

                </a>
            </div>


            <div class="Items">
                <strong id="Title" class="d-block text-gray-dark p-2">@Model.Title</strong>

                <div>
                    <form method="post" asp-action="Delete">
                            <button id="Delete-btn" type="submit" class="btn btn-danger btn-sm  p-2">Delete</button>
                        
                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-between pb-0 mb-0 mt-1">
                <p style="margin-left:1%">@Model.Date</p>
                <p style="margin-right:1%">Priority: @Model.Priority</p>
            </div>
            <p class="media-body pb-2 mb-0 small lh-125 border-bottom border-gray">
                @Model.Description
            </p>



        </div>


        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
        <script src="../../assets/js/vendor/popper.min.js"></script>
        <script src="../../dist/js/bootstrap.min.js"></script>
        <script src="../../assets/js/vendor/holder.min.js"></script>
        <script src="offcanvas.js"></script>
    </main>
</body>